<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela de login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            background-color: #6c757d;
        }
    </style>
</head>
<body>
    <section class="vh-100 gradient-custom bg-secondary">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Stylish Clothes</h2>
                                <p class="text-white-50 mb-5">Insira os dados nos campos de registro!</p>

                                <form action="/RegistrarR/Create" method="post">
                                    <input type="text" placeholder="Tamanho" name="tamanho" class="form-control form-control-lg" /><br>
                                    <input type="text" placeholder="Cor" name="cor" class="form-control form-control-lg" /><br>
                                    <input type="text" placeholder="Tipo" name="tipo" class="form-control form-control-lg" /><br>
                                    <input type="text" placeholder="Estampa" name="estampa" class="form-control form-control-lg" />
                                    <br>
                                    <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Registrar" />
                                </form>
                                <br><br>
                                <a class="btn btn-danger btn-lg" href="/Botoes/botoesindex" role="button">Voltar</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>